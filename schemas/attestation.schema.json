{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Attestation",
  "type": "object",
  "required": [
    "type",
    "target_cid",
    "claim",
    "signer",
    "created_at",
    "signature"
  ],
  "properties": {
    "type": {
      "const": "attestation"
    },
    "target_cid": {
      "type": "string",
      "minLength": 10
    },
    "claim": {
      "type": "string",
      "minLength": 1
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "signer": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "signature": {
      "type": "string",
      "minLength": 4
    }
  },
  "additionalProperties": true
}