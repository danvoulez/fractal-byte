{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Event",
  "type": "object",
  "required": [
    "type",
    "kind",
    "subjects",
    "author",
    "created_at",
    "signature"
  ],
  "properties": {
    "type": {
      "const": "event"
    },
    "kind": {
      "type": "string",
      "enum": [
        "release",
        "supersede",
        "deprecate",
        "yank"
      ]
    },
    "subjects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "metadata": {
      "type": "object"
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "signature": {
      "type": "string",
      "minLength": 4
    }
  },
  "additionalProperties": true
}